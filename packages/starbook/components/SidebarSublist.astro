---
import type { SidebarEntry } from '../utils/navigation';

interface Props {
  sublist: SidebarEntry[]
}
---

<ul>
  {
    Astro.props.sublist.map((entry) => (
      <li>
        {entry.type === 'link' ? (
          <a href={entry.href} aria-current={entry.isCurrent && 'true'}>{entry.label}</a>
        ) : (
          <strong>{entry.label}</strong>
          <Astro.self sublist={entry.entries} />
        )}
      </li>
    ))
  }
</ul>

<style>
  ul {
    line-height: 2;
  }
  ul strong {
    text-transform: uppercase;
  }
  [aria-current="true"] {
    background-color: rgb(211, 241, 255);
  }
</style>
