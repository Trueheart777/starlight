---
import type { generateToC } from './TableOfContents/generateToC';

interface Props {
  toc: ReturnType<typeof generateToC>;
}

const { toc } = Astro.props;
---

<ul>
  {
    toc.map((heading) => (
      <li>
        <a href={'#' + heading.slug}>{heading.text}</a>
        {heading.children.length > 0 && <Astro.self toc={heading.children} />}
      </li>
    ))
  }
</ul>
